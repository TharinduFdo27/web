// if...else statement
if (condition) {
  // code block
} else if (anotherCondition) {
  // code block
} else {
  // code block
}

// for loop
for (let i = 0; i < 5; i++) {
  // code block
}

// while loop
let x = 0;
while (x < 5) {
  // code block
  x++;
}

// switch statement
switch (expression) {
  case value1:
    // code block
    break;
  case value2:
    // code block
    break;
  default:
    // code block
}
